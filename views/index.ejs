<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Habit Tracker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">My Habit Progress Tracker</h1>

        <!-- Form for Data Input -->
        <form action="/add-habit" method="POST" class="mb-4">
            <div class="row">
                <div class="col">
                    <input type="date" name="date" class="form-control" required>
                </div>
                <div class="col">
                    <input type="checkbox" name="cycling"> Cycling
                </div>
                <div class="col">
                    <input type="checkbox" name="reading"> Reading
                </div>
                <div class="col">
                    <input type="checkbox" name="coding"> Coding
                </div>
                <div class="col">
                    <input type="checkbox" name="yoga"> Yoga
                </div>
                <div class="col">
                    <input type="text" name="comments" class="form-control" placeholder="Comments">
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Add Entry</button>
                </div>
            </div>
        </form>

        <!-- Table for Tracking -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Cycling</th>
                    <th>Reading</th>
                    <th>Coding</th>
                    <th>Yoga</th>
                    <th>Comments</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% if (habits.length > 0) { %>
                    <% habits.forEach(function(habit) { %>
                        <tr>
                            <td><%= habit.date.toISOString().split('T')[0] %></td>
                            <td><%= habit.cycling ? '✔️' : '❌' %></td>
                            <td><%= habit.reading ? '✔️' : '❌' %></td>
                            <td><%= habit.coding ? '✔️' : '❌' %></td>
                            <td><%= habit.yoga ? '✔️' : '❌' %></td>
                            <td><%= habit.comments || '' %></td>
                            <td>
                                <!-- Edit button triggers a modal -->
                                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editHabitModal" onclick="openEditModal(<%= habit.id %>)">Edit</button>
                            </td>
                            <td>
                                <!-- Delete button -->
                                <form action="/delete-habit/<%= habit.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this entry?');">
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="8">No entries yet. Start tracking your habits!</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Edit Habit Modal -->
    <div class="modal fade" id="editHabitModal" tabindex="-1" aria-labelledby="editHabitModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/edit-habit/<%= habit.id %>" method="POST" id="editHabitForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editHabitModalLabel">Edit Habit Entry</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col">
                                <input type="date" name="date" class="form-control" id="editDate" required>
                            </div>
                            <div class="col">
                                <input type="checkbox" name="cycling" id="editCycling"> Cycling
                            </div>
                            <div class="col">
                                <input type="checkbox" name="reading" id="editReading"> Reading
                            </div>
                            <div class="col">
                                <input type="checkbox" name="coding" id="editCoding"> Coding
                            </div>
                            <div class="col">
                                <input type="checkbox" name="yoga" id="editYoga"> Yoga
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" name="comments" class="form-control" id="editComments" placeholder="Comments">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function openEditModal(id) {
            // Fetch habit data from the server
            fetch(`/habit/${id}`)
                .then(response => response.json())
                .then(data => {
                    // Populate the form in the modal with the habit data
                    document.getElementById('editDate').value = data.date.split('T')[0];
                    document.getElementById('editCycling').checked = data.cycling;
                    document.getElementById('editReading').checked = data.reading;
                    document.getElementById('editCoding').checked = data.coding;
                    document.getElementById('editYoga').checked = data.yoga;
                    document.getElementById('editComments').value = data.comments || '';

                    // Update the form action to use the correct ID
                    document.getElementById('editHabitForm').action = `/edit-habit/${id}`;
                })
                .catch(error => console.error('Error:', error));
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
